{
    "name": "bright/vcard",
    "description": "Generate vCard files for quick contact import.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Saeed",
            "email": "appsaeed7@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "4.x-dev"
    },
    "autoload": {
        "psr-4": {
            "Bright\\VCard\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test:unit": "pest --colors=always",
        "test": [
            "@test:unit"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}